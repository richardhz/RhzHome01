@page "/documents"
@using RhzHome01.Client.Components
<div class="rh-masthead" id="content" role="main">
    <div class="container">
        @if (Documents == null)
        {
        <div class="rh-spinner">
            Loading ...
        </div>
        }
        else
        {
            <div class="row">
                <h1>Documents</h1>
            </div>
            <div class="row">
                <div class="col-md-8">
                    <SbrDisplayInfoList Items=@Documents Context="doc">
                        <div class="row">
                            <a @onclick="@(() => GotoPage(doc.BlobName))"> <h3 class="rhz-button">@doc.Caption</h3></a>
                        </div>
                        <div class="row ms-1">@doc.Preview</div>
                        <div class="row">
                            <span> 
                                <div  style="display:inline-block" aria-hidden="true"><i class="fa fa-clock"></i></div>
                                @doc.PublishedOn.ToLongDateString()
                            </span> 
                        </div>
                        <div class="row">
                             <span>
                                <div style="display:inline-block" aria-hidden="true"><i class="fa fa-calendar-plus"></i></div>
                                Updated on @doc.UpdatedOn.ToLongDateString()
                             </span>
                        </div>
                    </SbrDisplayInfoList>
                </div>
                <div class="col-md-4 rh-sidebar" role="navigation">
                    <div class="card card-body bg-light">
                        <LinkList LinkData="InterestingLinks" Title="Interesting Links"></LinkList>
                        <LinkList LinkData="DotNetLinks" Title=".Net Links"></LinkList>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

